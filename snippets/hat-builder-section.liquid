<!-- Load jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.js"></script>

<!-- Load Slick Carousel CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.css" />

<!-- Include CSS Files -->
{{ 'hat-builder-main.css' | asset_url | stylesheet_tag }}
{{ 'hat-builder-header.css' | asset_url | stylesheet_tag }}
{{ 'hat-builder-toggle.css' | asset_url | stylesheet_tag }}
{{ 'hat-builder-collection-label.css' | asset_url | stylesheet_tag }}
{{ 'hat-builder-dropdown.css' | asset_url | stylesheet_tag }}
{{ 'hat-builder-carousel.css' | asset_url | stylesheet_tag }}
{{ 'hat-builder-footer.css' | asset_url | stylesheet_tag }}

<!-- Include JavaScript File -->
{{ 'hat-builder-main.js' | asset_url | script_tag }}

<!-- HTML Structure -->
<div class="hat-builder-container">
  <!-- Render Header Section -->
  {% render 'hat-builder-header' %}

  <!-- Render Toggle Buttons for Patches and Hats -->
  {% render 'hat-builder-toggle' %}

  <!-- Render Drop-down Menus for Patches and Hats -->
  {% render 'hat-builder-dropdown' %}
  
  <!-- Render Hat Builder Collection Label -->
  {% render 'hat-builder-collection-label' %}

  <!-- Render Carousel Section -->
  {% render 'hat-builder-carousel' %}

  <!-- Render Footer Section -->
  {% render 'hat-builder-footer' %}
</div>
